<p id="notice"><%= notice %></p>
<%= form_for articles_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
  <div class="row" style="background:white; margin-top:5px; border-radius:10px">
    <div class="col-md-2"> 
      <strong><%= result.title %></strong>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-6"> 
      <%=  result.content %>
    </div>
  </div>
  <div class="col-md-1"></div>
    <div class="col-md-6"> 
      <%=  result.price %>
    </div>
  </div>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
