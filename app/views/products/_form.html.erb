<%= form_for(@product) do |f| %>

  <% if params[:preview_button] %>
    <div id= "preview"><h2><%= @product.name %></h2></div>
    <h4><%= @product.price %></h4>
    <%= image_tag @product.avatar.url(:small) %>
  <% end %>

  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>

  <div class="actions">
    <%= f.submit %>
    <%= f.submit 'Preview', :name => 'preview_button' %>
  </div>
<% end %>
